%p= @film.title
%p= @film.description
- if @film.film_link.attached?
  = video_tag rails_blob_path(@film.film_link), controls: true, width: '100%'
%div
  - if current_user.admin?
    - if @film.film_link.attached?
      = link_to 'Delete film', film_attachment_path(@film, @film.film_link.id),
      method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning'
    = link_to 'Delete all', @film,
    method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    = link_to 'Edit', edit_film_path(@film), class: 'btn btn-success'
  = link_to 'Back', films_path, class: 'btn btn-secondary'
